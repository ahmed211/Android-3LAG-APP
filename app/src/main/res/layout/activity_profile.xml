<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/doalist"
        android:layout_marginTop="160dp"
        android:divider="#D8D8D8"
        android:dividerHeight="10dp"

        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabdoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/unnamed"
        app:layout_anchor="@id/doalist"
        app:layout_anchorGravity="bottom|left|end"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#22D5B2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="162dp">

            <TextView
                android:text="اسم المريض : "
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="السن             : "
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="اسم الدكتور  : "
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4"
                android:layout_marginTop="14dp"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="التشخيص     : "
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:layout_marginTop="14dp"
                android:id="@+id/textView10"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_toStartOf="@+id/textView3"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/patientname"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignRight="@+id/patientname"
                android:layout_alignEnd="@+id/patientname"
                android:id="@+id/patientage"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toLeftOf="@+id/textView5"
                android:id="@+id/drname"
                android:layout_marginRight="21dp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toLeftOf="@+id/textView10"
                android:id="@+id/patientdio"
                android:layout_marginRight="21dp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textColor="@android:color/background_light"
                />


        </RelativeLayout>
    </FrameLayout>



</android.support.design.widget.CoordinatorLayout>